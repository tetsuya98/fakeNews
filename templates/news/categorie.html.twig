{% extends 'base.html.twig' %}

{% block title %}
    {{ categorie.intitule }} - Fake News
{% endblock %}

{% block body %}
    <div class="text-center">
        <h1>{{ categorie.intitule }}</h1>

        <ul class="list-group">
            <li class="list-group-item">{{ categorie.id }}</li>
            <li class="list-group-item">Viralite Moyenne {{ moyViralite }}</li>
        </ul>
        <div class="btn-group btn-block" role="group">
            <a class="btn btn-danger btn-lg " href="{{ path('fake_news_categorie_remove', { 'id': categorie.id }) }}" role="button"><i class="fas fa-trash"></i> Delete</a>
            <a class="btn btn-info btn-lg " href="{{ path('fake_news_categorie_edit', { 'id': categorie.id }) }}" role="button"><i class="fas fa-edit"></i> Edit</a>
        </div>

        <h2>Personne</h2>

        <table class="table table-striped">
            <thead>
            <tr>
                <th scope="col">Nom</th>
                <th scope="col">Age</th>
                <th scope="col">Sexe</th>
                <th scope="col"></th>
            </tr>
            </thead>
            <tbody>
            {% for personne in personnes %}
                <tr>
                    <td>{{ personne.nom }}</td>
                    <td>{{ personne.age }}</td>
                    <td>{{ personne.sexe }}</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('fake_news_personne', { 'id': personne.id }) }}" role="button"><i class="far fa-eye"></i> Show</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a class="btn btn-secondary btn-lg btn-block" href="{{ path('fake_news_categories') }}" role="button">Return</a>

    </div>
{% endblock %}